<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="Transparent">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>   
        <item name="android:windowAnimationStyle">@+android:style/Animation.Translucent</item>
    </style>

    <style name="appCompatSwitch" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">#00ffff</item>
        <!--<item name="colorPrimaryDark">#00ffff</item>-->
        <item name="colorControlActivated">#21D323</item>
        <!-- Inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/white</item>
        <!-- Inactive track color(30% transparency) -->
        <item name="android:colorForeground">#9b9b9b</item>
    </style>
    <!-- toolbar的theme-->
    <style name="appCompatToolBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="toolbarStyle">@style/myToolbarStyle</item>
        <item name="toolbarNavigationButtonStyle">@style/myToolbarNavigationButtonStyle</item>
    </style>
    <!-- toolbar的style-->
    <style name="myToolbarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:padding">0dip</item>
        <item name="android:divider">#000000</item>
        <item name="android:dividerHeight">1dip</item>

    </style>
    <!-- toolbar中的返回按钮的style-->
    <style name="myToolbarNavigationButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:maxWidth">16dip</item>
        <item name="android:maxHeight">16dip</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <!-- toolbar中的title的style-->
    <style name="myToolbarTitleStyle">
        <item name="android:textColor">#222735</item>
        <item name="android:textSize">18sp</item>
    </style>
    <!-- toolbar中的title的style-->
    <style name="myToolbarSubTitleStyle">
        <item name="android:textColor">#b2b4b8</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

</resources>