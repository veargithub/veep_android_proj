<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView android:id="@+id/tv1" android:layout_width="fill_parent" android:layout_height="wrap_content" />
    <Button 
        android:id="@+id/btn1" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:text="next"
        android:background="@drawable/skip" />
    
    <ImageView 
        android:id="@+id/iv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:clickable="true"
        android:src="@drawable/home_page_back_selector"
        />
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:clickable="true"
        android:background="@drawable/home_page_back_selector"
        android:enabled="true"/>
    <TextView
		        android:id="@+id/name"
		        android:layout_width="100dip"
		        android:layout_height="wrap_content"
		        
		        
				android:paddingRight="5dip"
		        android:ellipsize="end"
		        android:textColor="@android:color/black"
		        android:textSize="14sp" 
		        android:text="AAAAA BBBBBBBB cCCCCCCCCC"/>

</LinearLayout>